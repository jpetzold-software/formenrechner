<Window x:Name="Anleitung" x:Class="Beleg.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beleg"
        mc:Ignorable="d"
        Title="Anleitung" Height="178" Width="388">
    <Grid Cursor="Hand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="57*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtAnleitung" HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial" Text="Bei dem Programm handelt es sich um eine Rechenhilfe für Arten von Formen und Körpern. Dabei wählt man zuerst, welche Form bzw. welchen Körper man haben möchte. Daraufhin müssen alle erforderlichen Maße eingegeben werden. Das Programm berechnet dann alles nach Betätigen des Buttons und am Ende bekommt man alle berechenbaren Größen in der Ausgabe." Grid.ColumnSpan="2" Width="348" TextAlignment="Center" Height="109"/>
        <Button x:Name="btnBackToMenu" Content="Zum Hauptmenü" HorizontalAlignment="Left" Margin="106,112,0,0" VerticalAlignment="Top" FontFamily="Arial" Click="btnBackToMenu_Click" Width="176" Height="35" FontSize="16" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
